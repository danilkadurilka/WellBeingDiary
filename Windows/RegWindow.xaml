<Window x:Class="WellBeingDiary.Windows.RegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация нового пользователя" Height="500" Width="400"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Регистрация нового пользователя" 
                   FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Создайте аккаунт, заполняя поля" Margin="0 0 0 10"/>

                <Border BorderBrush="Gray" BorderThickness="1" Margin="0 0 0 10" 
                        Height="100" Width="100" HorizontalAlignment="Left">
                    <Image x:Name="ImgUserPhoto" Stretch="Uniform"/>
                </Border>
                <Button x:Name="AddPhotoButton" Content="Добавить фото" 
                        Click="AddPhotoButton_Click" Width="100" HorizontalAlignment="Left" Margin="0 0 0 20"/>

                <TextBlock Text="Имя" Margin="0 5 0 5"/>
                <TextBox x:Name="BoxName" Height="25" Margin="0 0 0 10" Text="{Binding Name}"/>

                <TextBlock Text="Пол" Margin="0 5 0 5"/>
                <ComboBox x:Name="ComboBoxGender" Height="25" Margin="0 0 0 10" SelectedValue="{Binding Gender}">
                    <ComboBoxItem Content="Мужской"/>
                    <ComboBoxItem Content="Женский"/>
                </ComboBox>

                <TextBlock Text="Рост (см)" Margin="0 5 0 5"/>
                <TextBox x:Name="BoxHeight" Height="25" Margin="0 0 0 10" Text="{Binding Height}"/>

                <TextBlock Text="Вес (кг)" Margin="0,5,0,5"/>
                <TextBox x:Name="BoxWeight" Height="25" Margin="0 0 0 10" Text="{Binding Weight}"/>

                <TextBlock Text="Дата рождения" Margin="0 5 0 5"/>
                <DatePicker x:Name="DPBirthDate" Height="25" Margin="0 0 0 10"/>

                <TextBlock Text="Логин" Margin="0 5 0 5"/>
                <TextBox x:Name="BoxLogin" Height="25" Margin="0 0 0 10" Text="{Binding Login}"/>

                <TextBlock Text="Пароль" Margin="0 5 0 5"/>
                <PasswordBox x:Name="BoxPassword" Height="25" Margin="0 0 0 20"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="RegButton" Content="Регистрация" 
                    Click="RegButton_Click" Width="100" Height="30" Margin="0,0,10,0"/>
            <Button x:Name="CancelButton" Content="Отмена" 
                    Click="CancelButton_Click" Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Window>