<Window x:Class="WellBeingDiary.Windows.MainPageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Дневник самочувствия" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Icon="/Images/ico.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0">
            <StackPanel>
                <Border BorderBrush="Gray" BorderThickness="0" Height="100" Width="100" HorizontalAlignment="Center" Margin="20">
                    <Image Name="UserImage" Stretch="Uniform"/>
                </Border>
                <TextBlock Name="BoxUserName" FontSize="18" FontWeight="Bold" Margin="10" Text="{Binding currentUser.Name}"/>
                <Button Name="ViewProfileButton" Content="Просмотреть профиль" FontSize="14" Click="ViewProfileButton_Click" Margin="0 0 0 10" 
                        Background="White" Foreground="Black" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15 0 0 0"/>
                <Button Name="MainPageButton" Content="Главная страница" FontSize="14" Click="MainPageButton_Click" Margin="0 0 0 10"
                        Background="White" Foreground="Black" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15 0 0 0"/>
                <Button Name="AddDataButton" Content="Внести данные за день" FontSize="14" Click="AddDataButton_Click" Margin="0 0 0 10"
                        Background="White" Foreground="Black" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15 0 0 0"/>
                <Button Name="MedControlButton" Content="Контроль лекарств" FontSize="14" Click="MedControlButton_Click" Margin="0 0 0 10"
                        Background="White" Foreground="Black" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15 0 0 0"/>
                <Button Name="ReportsButton" Content="Отчеты" FontSize="14" Click="ReportsButton_Click" Margin="0 0 0 10"
                        Background="White" Foreground="Black" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15 0 0 0"/>
                <Button Name="ExitButton" Content="Сменить аккаунт" FontSize="14" Click="ExitButton_Click"  VerticalAlignment="Bottom"
                       Background="Black" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Margin="0 215 0 0" Padding="15 0 0 0"/>
            </StackPanel>
        </Border>
        <ContentControl Name="MainContent" Grid.Column="1"/>
    </Grid>
</Window>