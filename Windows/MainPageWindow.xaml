<Window x:Class="WellBeingDiary.Windows.MainPageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Дневник самочувствия" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0">
            <StackPanel>
                <TextBlock Name="BoxUserName" Text="{Binding currentUser.Name}" FontFamily="Roboto" FontSize="18" FontWeight="Bold" Margin="10"/>
                <Button Name="ViewProfileButton" Content="Просмотреть профиль" FontFamily="Roboto" FontSize="14" Click="ViewProfileButton_Click" Margin="0 0 0 10" 
                        Background="White" Foreground="Black" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15 0 0 0"/>
                <Button Name="MainPageButton" Content="Главная страница" FontFamily="Roboto" FontSize="14" Click="MainPageButton_Click" Margin="0 0 0 10"
                        Background="White" Foreground="Black" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15 0 0 0"/>
                <Button Name="AddDataButton" Content="Внести данные за день" FontFamily="Roboto" FontSize="14" Click="AddDataButton_Click" Margin="0 0 0 10"
                        Background="White" Foreground="Black" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15 0 0 0"/>
                <Button Name="MedControlButton" Content="Контроль лекарств" FontFamily="Roboto" FontSize="14" Click="MedControlButton_Click" Margin="0 0 0 10"
                        Background="White" Foreground="Black" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15 0 0 0"/>
                <Button Name="ReportsButton" Content="Отчеты" FontFamily="Roboto" FontSize="14" Click="ReportsButton_Click" Margin="0 0 0 10"
                        Background="White" Foreground="Black" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15 0 0 0"/>
                <Button Name="ExitButton" Content="Сменить аккаунт" FontFamily="Roboto" FontSize="14" Click="ExitButton_Click" Margin="0 370 0 0"
                       Background="Black" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15 0 0 0"/>
            </StackPanel>
        </Border>
        <ContentControl Name="MainContent" Grid.Column="1"/>
    </Grid>
</Window>