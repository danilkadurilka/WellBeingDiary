<UserControl x:Class="WellBeingDiary.UserControllers.MainPageContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WellBeingDiary.UserControllers"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <TextBlock FontSize="18" FontWeight="Bold" Margin="0 0 0 10">
                <Run Text="Добро пожаловать, "/>
                <Run Text="{Binding currentUser.Name}"/>
                <Run Text="!"/>
            </TextBlock>
            
            <TextBlock Margin="0 0 0 20">
                <Run Text="Сегодня"/>
                <Run Text="{Binding CurrentDate}"/>
            </TextBlock>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Артериальное давление" FontWeight="Bold"/>
                        <TextBlock x:Name="BoxBloodPressure" FontSize="16"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Вес" FontWeight="Bold"/>
                        <TextBlock x:Name="txtWeight" FontSize="16"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Самочувствие и настроение" FontWeight="Bold"/>
                        <TextBlock x:Name="txtWellBeing" FontSize="16"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="2" Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Сон" FontWeight="Bold"/>
                        <TextBlock x:Name="txtSleep" FontSize="16"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Row="2" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Физическая активность" FontWeight="Bold"/>
                        <TextBlock x:Name="txtSteps" FontSize="16"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Текущие лекарства" FontWeight="Bold" Margin="0 0 0 5"/>
                        <ItemsControl x:Name="itemsMedicines">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding MedicineName}" Margin="0 2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock x:Name="TextNoMedicines" Text="Нет активных лекарств" FontStyle="Italic" Foreground="Gray" Margin="0 5"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
